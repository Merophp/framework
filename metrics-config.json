    "vendor\\merophp\\bundle-manager\\src",
    "vendor\\merophp\\html-view\\src",
    "vendor\\merophp\\json-view\\src",
    "vendor\\merophp\\log-manager\\src",
    "vendor\\merophp\\object-manager\\src",
    "vendor\\merophp\\php-template-view\\src",
    "vendor\\merophp\\reflection\\src",
